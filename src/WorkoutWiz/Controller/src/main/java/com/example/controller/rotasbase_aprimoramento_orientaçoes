package com.seupacote.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class AprimoramentoController {

    @GetMapping("/api/exercise/{name}")
    public String getExercisePage() {
        return "exercise"; // Nome da página HTML relacionada ao exercício
    }

    @GetMapping("/api/searchExercise")
    public String getSearchExercisePage() {
        return "searchExercise"; // Nome da página HTML relacionada à pesquisa de exercícios
    }

    @GetMapping("/api/feedback")
    public String getFeedbackPage() {
        return "feedback"; // Nome da página HTML relacionada ao feedback
    }
}
